<div class="card border-primary">
  <%= form_with model: @feedback, class: 'form-control', local: true do |form| %>
    <%= render 'shared/errors', resource: @feedback %> <!-- Ensure the resource is @feedback -->

    <div class="mb-3">
      <%= form.label :name %>
      <%= form.text_field :name, id: :feedback_name, readonly: form.object.name.present?, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :email %>
      <%= form.email_field :email, id: :feedback_email, readonly: form.object.email.present?, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :message %>
      <%= form.text_area :message, id: :feedback_message, class: 'form-control', rows: 8 %>
    </div>

    <div class="actions mt-3">
      <%= form.submit t('send'), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>