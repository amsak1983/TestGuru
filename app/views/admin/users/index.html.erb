<!-- app/views/admin/users/index.html.erb -->
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><%= t('admin.lables.users') %></h5>
    <%= link_to t('admin.users.new'), new_admin_user_path,
                class: "btn btn-primary" %>
  </div>
  <div class="card-body">
    <table class="table table-striped">
      <thead>
      <tr>
        <th><%= t('admin.users.username') %></th>
        <th><%= t('admin.users.email') %></th>
        <th><%= t('admin.labels.tests_count') %></th>
        <th><%= t('admin.labels.actions') %></th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.tests.count %></td>
          <td>
            <%= link_to t('admin.labels.show'), admin_user_path(user),
                        class: "btn btn-sm btn-info" %>
            <%= link_to t('admin.labels.edit'), edit_admin_user_path(user),
                        class: "btn btn-sm btn-warning" %>
            <%= link_to t('admin.labels.delete'), admin_user_path(user),
                        method: :delete,
                        data: { confirm: t('admin.labels.confirm_delete') },
                        class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
  </div>
</div>