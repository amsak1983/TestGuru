<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><%= @test.title %></h5>
    <%= link_to t('admin.tests.back'), admin_tests_path, class: "btn btn-secondary" %>
  </div>
  <div class="card-body">
    <div class="mb-4">
      <h5><%= t('admin.questions.title') %></h5>
      <div id="questions"
           data-controller="questions"
           data-questions-url="<%= admin_test_questions_path(@test) %>">
        <% @questions.each do |question| %>
          <%= render 'question', question: question %>
        <% end %>

        <!-- Форма для нового вопроса -->
        <div class="mt-4" data-questions-target="newForm">
          <h6><%= t('admin.questions.new') %></h6>
          <%= render 'admin/questions/form', question: @question %>
        </div>
      </div>
    </div>
  </div>
</div>