<div class="question mb-3 p-3 border rounded" data-questions-target="item"
     data-id="<%= question.id %>">
  <div class="d-flex justify-content-between align-items-center">
    <div>
      <p class="mb-2"><strong><%= question.body %></strong></p>
      <% question.answers.each do |answer| %>
        <div class="d-flex gap-2 align-items-center">
          <span><%= answer.body %></span>
          <% if answer.correct %>
            <span class="badge bg-success"><%= t('admin.answers.correct') %></span>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="d-flex gap-2">
      <%= link_to t('admin.labels.edit'), edit_admin_test_question_path(question.test_id,question),
                  class: "btn btn-sm btn-warning" %>
      <%= link_to t('admin.labels.delete'), admin_test_question_path(question.test_id,question),
                  method: :delete,
                  data: { confirm: t('admin.labels.confirm_delete'),
                          action: "questions#remove" },
                  class: "btn btn-sm btn-danger" %>
    </div>
  </div>
</div>